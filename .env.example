# Supabase - REQUIRED
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Shippo - REQUIRED
VITE_SHIPPO_API_KEY=your_shippo_api_key
VITE_SHIPPO_WEBHOOK_SECRET=your_shippo_webhook_secret

# Redis (Upstash) - REQUIRED for background workers
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Email (SendGrid/Resend) - REQUIRED for notifications
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@refit.trade

# Solana - REQUIRED
VITE_SOLANA_RPC_HOST=https://api.mainnet-beta.solana.com
VITE_SOLANA_NETWORK=mainnet-beta
VITE_PLATFORM_WALLET=your_platform_wallet_address
VITE_ESCROW_PROGRAM_ID=your_escrow_program_id

# App Configuration
VITE_APP_URL=https://refit.trade
VITE_API_BASE_URL=/api
VITE_WEBHOOK_URL=/api/webhooks

# Node Environment
NODE_ENV=production
